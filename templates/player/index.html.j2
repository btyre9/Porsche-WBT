      </svg>
    </div>

    <div class="bottom-center">
      <!-- Audio Progress (visual only) -->
      <div class="audio-progress disabled" id="audio-progress" title="Audio progress (visual only)">
        <div class="audio-progress-fill" id="audio-progress-fill"></div>
      </div>
    </div>

    <div class="bottom-controls">
      <!-- Play / Pause -->
      <button class="ctrl-btn" id="btn-playpause" title="Play" disabled>
        <svg id="icon-play" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m8 5 11 7-11 7z"/></svg>
        <svg id="icon-pause" style="display:none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m7 5h4v14h-4zm6 0h4v14h-4z"/></svg>
      </button>

      <!-- Next -->
      <button class="ctrl-btn ctrl-btn-next" id="btn-next" title="Next slide">
        <span class="next-label">Next</span>
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m15.121 11.997-5.477-6.497-.769.642 4.94 5.858-4.94 5.858.768.642 5.476-6.494.006-.005v-.001z"/></svg>
      </button>

      <!-- Volume -->
      <button class="ctrl-btn" id="btn-volume" title="Toggle audio">
        <svg id="icon-vol-on" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m21.504 11.992c0 2.9-1.175 5.524-3.075 7.425l-.708-.707c1.7847-1.7798 2.7863-4.1975 2.783-6.718.0033-2.52-.9979-4.9373-2.782-6.717l.707-.707c1.9 1.9 3.075 4.525 3.075 7.424zm-4 0c.0021 1.7243-.6831 3.3783-1.904 4.596l-.707-.707c1.0327-1.0305 1.6121-2.4301 1.61-3.889.0018-1.4586-.5776-2.8577-1.61-3.888l.708-.708c1.2205 1.2178 1.9054 2.8718 1.903 4.596zm-4.508-7.992v16l-5-5h-4.996v-6h4.996zm-1 2.414-3.586 3.586h-4.414v4h4.414l3.586 3.585z"/></svg>
        <svg id="icon-vol-off" style="display:none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m20.25 9 .75.75-2.25 2.25 2.25 2.25-.75.75-2.25-2.25-2.25 2.25-.75-.75 2.25-2.25-2.25-2.25.75-.75 2.25 2.25zm-7.25-5v16l-5-5h-5v-6h5zm-1 2.414-3.586 3.586h-4.414v4h4.414l3.586 3.585z"/></svg>
      </button>

      <!-- CC -->
      <button class="ctrl-btn" id="btn-cc" title="Toggle captions">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m19 5h-14c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-10c0-1.1-.9-2-2-2zm1 12c0 .55-.45 1-1 1h-14c-.55 0-1-.45-1-1v-10c0-.55.45-1 1-1h14c.55 0 1 .45 1 1zm-6.42-5.04c0 2.08.21 2.42 1.29 2.42.87 0 1.08-.38 1.15-1.54h.99c-.07 1.69-.59 2.37-2.13 2.37-1.87 0-2.37-.81-2.37-3.24s.56-3.19 2.37-3.19 2.06.76 2.13 2.43h-1c-.05-1.15-.26-1.49-1.14-1.49-1.08 0-1.29.39-1.29 2.25zm-5.5 0c0 2.08.21 2.42 1.29 2.42.87 0 1.08-.38 1.15-1.54h.99c-.07 1.69-.59 2.37-2.13 2.37-1.87 0-2.37-.81-2.37-3.24s.56-3.19 2.37-3.19 2.06.76 2.13 2.43h-1c-.05-1.15-.26-1.49-1.14-1.49-1.08 0-1.29.39-1.29 2.25z"/></svg>
      </button>

      <!-- Replay -->
      <button class="ctrl-btn" id="btn-replay" title="Replay current slide">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m21,12c0,4.9705-4.0294,9-9,9S3,16.9705,3,12,7.0294,3,12,3c1.975,0,3.7963.6416,5.2784,1.7216l1.7216-1.7216v4h-4l1.5594-1.5594c-1.2949-.9037-2.8638-1.4406-4.5594-1.4406-4.4112,0-8,3.5887-8,8s3.5888,8,8,8,8-3.5888,8-8h1Zm-10-2.865v5.7299l3.4379-2.865-3.4379-2.865m-1-2.135l6,5-6,5V7h0Z"/></svg>
      </button>

      <!-- Playback Speed -->
      <button class="ctrl-btn ctrl-btn-text" id="btn-speed" title="Playback speed: 1x">
        <span class="ctrl-btn-label" id="speed-label">1x</span>
      </button>

      <span class="nav-divider"></span>
    </div>
  </div>

  <!-- Knowledge Check Modal -->
  <div class="kc-backdrop hidden" id="kc-backdrop">
    <div class="kc-card">
      <h3 id="kc-progress">Knowledge Check</h3>
      <p class="kc-question" id="kc-question"></p>
      <div class="kc-choices" id="kc-choices"></div>
      <div class="kc-actions">
        <button class="kc-btn kc-btn-submit" id="kc-submit" disabled>Submit</button>
        <button class="kc-btn kc-btn-continue hidden" id="kc-continue">Continue</button>
      </div>
      <p class="kc-feedback" id="kc-feedback"></p>
    </div>
  </div>

  <!-- Cue Editor -->
  <div class="cue-backdrop hidden dev-cues" id="cue-backdrop">
    <div class="cue-card" role="dialog" aria-modal="true" aria-label="Voiceover cue editor">
      <div class="cue-head">
        <h3>Voiceover Cue Editor</h3>
        <button class="cue-btn" id="cue-close">Close</button>
      </div>
      <div class="cue-meta">
        <div>Slide: <strong id="cue-slide-id">-</strong></div>
        <div>Current audio: <strong id="cue-current-time">0.00</strong>s</div>
        <div>Source: <strong id="cue-source">new</strong></div>
      </div>

      <div class="cue-grid">
        <div class="cue-field">
          <label for="cue-time">At (sec)</label>
          <input id="cue-time" type="number" min="0" step="0.01" value="0.00">
        </div>
        <div class="cue-field">
          <label for="cue-target">Target (`data-anim-key`)</label>
          <input id="cue-target" type="text" placeholder="title">
        </div>
        <div class="cue-field">
          <label for="cue-action">Action</label>
          <select id="cue-action">
            <option value="in">in</option>
            <option value="out">out</option>
            <option value="set">set</option>
            <option value="classAdd">classAdd</option>
            <option value="classRemove">classRemove</option>
          </select>
        </div>
        <div class="cue-field">
          <label for="cue-preset">Preset</label>
          <select id="cue-preset">
            <option value="fade">fade</option>
            <option value="fadeUp">fadeUp</option>
            <option value="fadeDown">fadeDown</option>
            <option value="slideLeft">slideLeft</option>
            <option value="slideRight">slideRight</option>
            <option value="scaleIn">scaleIn</option>
            <option value="scaleOut">scaleOut</option>
          </select>
        </div>
        <div class="cue-field">
          <label for="cue-duration">Duration (optional)</label>
          <input id="cue-duration" type="number" min="0" step="0.01" placeholder="0.60">
        </div>
        <div class="cue-field">
          <label for="cue-classname">Class name (for class actions)</label>
          <input id="cue-classname" type="text" placeholder="is-active">
        </div>
      </div>

      <div class="cue-actions">
        <button class="cue-btn" id="cue-capture">Capture now</button>
        <button class="cue-btn cue-btn-primary" id="cue-add">Add cue</button>
        <button class="cue-btn" id="cue-sort">Sort by time</button>
        <button class="cue-btn cue-btn-danger" id="cue-clear">Clear all</button>
        <button class="cue-btn" id="cue-load">Reload from file</button>
      </div>

      <div class="cue-table-wrap">
        <table class="cue-table">
          <thead>
            <tr>
              <th>#</th>
              <th>at</th>
              <th>action</th>
              <th>target</th>
              <th>preset</th>
              <th>duration</th>
              <th>remove</th>
            </tr>
          </thead>
          <tbody id="cue-list"></tbody>
        </table>
      </div>

      <div class="cue-json-wrap">
        <div class="cue-actions">
          <button class="cue-btn" id="cue-copy-json">Copy JSON</button>
          <button class="cue-btn" id="cue-download-json">Download JSON</button>
        </div>
        <div class="cue-field">
          <label for="cue-json-output">Cue JSON</label>
          <textarea id="cue-json-output" readonly></textarea>
        </div>
      </div>

      <p class="cue-status" id="cue-status"></p>
    </div>
  </div>

  <script src="./runtime.js"></script>
</body>
</html>
