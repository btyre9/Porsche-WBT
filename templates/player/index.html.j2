<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ course_title }}</title>
  <style>
    body { margin:0; font-family: Arial, sans-serif; display:flex; flex-direction:column; min-height:100vh; }
    header, footer { padding:12px 16px; background:#111; color:#fff; display:flex; gap:8px; align-items:center; }
    main { flex:1; display:grid; grid-template-columns: 1fr 360px; min-height:70vh; }
    iframe { border:0; width:100%; height:100%; min-height:70vh; background:#fff; }
    .panel { border-left:1px solid #ddd; padding:12px; overflow:auto; background:#fafafa; }
    .hidden { display:none; }
    .choice { display:block; margin:8px 0; }
    .spacer { flex:1; }
    button { padding:8px 12px; }
    #feedback { margin-top:10px; font-weight:600; }
  </style>
</head>
<body>
  <header>
    <strong id="course-title">{{ course_title }}</strong>
    <span class="spacer"></span>
    <span id="slide-counter">0/0</span>
  </header>

  <main>
    <iframe id="slide-frame" title="Slide content"></iframe>
    <aside class="panel">
      <div style="display:flex; gap:8px; flex-wrap:wrap;">
        <button id="btn-open-kc">Knowledge Checks</button>
        <button id="btn-open-final">Final Quiz</button>
        <button id="btn-close-quiz">Close Quiz</button>
      </div>
      <hr />
      <section id="quiz-panel" class="hidden">
        <h3 id="quiz-title">Quiz</h3>
        <p id="quiz-progress"></p>
        <p id="quiz-question"></p>
        <form id="quiz-form"></form>
        <div style="display:flex; gap:8px; margin-top:8px;">
          <button id="btn-submit-answer" type="button">Submit</button>
          <button id="btn-next-question" type="button">Next</button>
        </div>
        <p id="feedback"></p>
      </section>
    </aside>
  </main>

  <footer>
    <button id="btn-prev">Prev</button>
    <button id="btn-next">Next</button>
  </footer>

  <script src="./runtime.js"></script>
</body>
</html>
