<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ course_title }}</title>
  <style>
    @font-face {
      font-family: 'Porsche Next TT';
      src: url('../assets/fonts/porsche-next-tt.ttf') format('truetype');
      font-weight: 400;
      font-style: normal;
    }
    @font-face {
      font-family: 'Porsche Next TT';
      src: url('../assets/fonts/porsche-next-tt-bold.ttf') format('truetype');
      font-weight: 700;
      font-style: normal;
    }
    @font-face {
      font-family: 'Porsche Next TT';
      src: url('../assets/fonts/porsche-next-tt-italic.ttf') format('truetype');
      font-weight: 400;
      font-style: italic;
    }
    @font-face {
      font-family: 'Porsche Next TT';
      src: url('../assets/fonts/porsche-next-tt-bold-italic.ttf') format('truetype');
      font-weight: 700;
      font-style: italic;
    }

    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    button, input, select, textarea { font-family: inherit; }

    html, body {
      height: 100%;
      overflow: hidden;
      background: #000;
      font-family: 'Porsche Next TT', Arial, Helvetica, sans-serif;
    }

    body {
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    /* --- Top bar --- */
    .top-bar {
      height: 80px;
      min-height: 80px;
      background: #3e4146;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 16px;
      z-index: 10;
    }
    .top-left {
      display: flex;
      align-items: center;
    }
    .top-right {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .menu-btn {
      display: flex;
      align-items: center;
      gap: 8px;
      background: none;
      border: none;
      color: #fff;
      cursor: pointer;
      font-family: Porsche Next TT, Arial, Helvetica, sans-serif;
      font-size: 14px;
      padding: 4px 8px;
      border-radius: 4px;
    }
    .menu-btn:hover { background: rgba(255,255,255,0.1); }
    .menu-btn svg {
      width: 20px;
      height: 20px;
      fill: #fff;
    }
    .top-icon-btn {
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: none;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      padding: 0;
    }
    .top-icon-btn:hover { background: rgba(255,255,255,0.1); }
    .top-icon-btn svg {
      width: 22px;
      height: 22px;
      fill: #fff;
    }
    .top-text-btn {
      min-width: 44px;
      height: 36px;
      padding: 0 10px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: none;
      border: none;
      border-radius: 4px;
      color: #fff;
      font-size: 13px;
      font-weight: 700;
      cursor: pointer;
    }
    .top-text-btn:hover { background: rgba(255,255,255,0.1); }
    .dev-cues { display: none !important; }

    /* --- Menu drawer --- */
    .menu-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.35);
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.2s ease;
      z-index: 90;
    }
    .menu-overlay.open {
      opacity: 1;
      pointer-events: auto;
    }
    .menu-panel {
      position: absolute;
      top: 0;
      left: 0;
      width: 360px;
      max-width: 90vw;
      height: 100%;
      background: #2b2e33;
      color: #fff;
      border-right: 1px solid rgba(255,255,255,0.15);
      transform: translateX(-100%);
      transition: transform 0.2s ease;
      display: flex;
      flex-direction: column;
    }
    .menu-overlay.open .menu-panel {
      transform: translateX(0);
    }
    .menu-panel-header {
      height: 80px;
      display: flex;
      align-items: center;
      padding: 0 20px;
      border-bottom: 1px solid rgba(255,255,255,0.15);
      font-size: 16px;
      font-weight: 700;
    }
    .toc-list {
      list-style: none;
      margin: 0;
      padding: 8px 0;
      overflow-y: auto;
      flex: 1;
    }
    .toc-item {
      width: 100%;
      display: block;
      border: none;
      background: none;
      color: #fff;
      text-align: left;
      padding: 12px 20px;
      font-size: 14px;
      cursor: pointer;
    }
    .toc-item:hover {
      background: rgba(255,255,255,0.1);
    }
    .toc-item.active {
      background: rgba(213, 0, 28, 0.25);
      border-left: 3px solid #d5001c;
      padding-left: 17px;
    }

    /* --- Slide area --- */
    .slide-area {
      flex: 1;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #1a1a1a;
      overflow: hidden;
    }

    .slide-scaler {
      width: 1920px;
      height: 920px;
      transform-origin: center center;
      position: absolute;
    }

    .slide-scaler iframe {
      width: 1920px;
      height: 920px;
      border: 0;
      display: block;
      background: #1a1a1a;
    }

    /* --- CC overlay --- */
    .cc-overlay {
      position: absolute;
      bottom: 24px;
      left: 50%;
      transform: translateX(-50%);
      max-width: 80%;
      background: rgba(0,0,0,0.75);
      color: #fff;
      font-size: 16px;
      line-height: 1.5;
      padding: 8px 20px;
      border-radius: 4px;
      text-align: center;
      pointer-events: none;
      z-index: 5;
    }
    .cc-overlay.hidden { display: none; }

    /* --- Click-to-begin overlay --- */
    .click-to-begin-overlay {
      position: absolute;
      inset: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 8;
      cursor: pointer;
      background: rgba(0, 0, 0, 0.45);
    }
    .click-to-begin-overlay.hidden { display: none; }
    .click-to-begin-label {
      color: #fff;
      font-size: 22px;
      font-weight: 700;
      letter-spacing: 0.5px;
      padding: 14px 36px;
      background: rgba(0, 0, 0, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.25);
      border-radius: 6px;
      pointer-events: none;
      user-select: none;
    }

    /* --- Bottom bar --- */
    .bottom-bar {
      height: 80px;
      min-height: 80px;
      background: #3e4146;
      display: grid;
      grid-template-columns: auto 1fr auto;
      align-items: center;
      column-gap: 20px;
      padding: 0 20px;
      z-index: 10;
    }

    .bottom-logo svg {
      width: 200px;
      height: 20px;
      display: block;
    }
    .bottom-center {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .bottom-controls {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .ctrl-btn {
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: none;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      padding: 0;
    }
    .ctrl-btn:hover { background: rgba(255,255,255,0.1); }
    .ctrl-btn:disabled { opacity: 0.3; cursor: default; }
    .ctrl-btn:disabled:hover { background: none; }
    .ctrl-btn svg {
      width: 22px;
      height: 22px;
      fill: #fff;
    }
    .ctrl-btn-text {
      width: auto;
      min-width: 56px;
      padding: 0 10px;
    }
    .ctrl-btn-label {
      color: #fff;
      font-size: 13px;
      font-weight: 700;
      line-height: 1;
    }
    .ctrl-btn.active svg { fill: #d5001c; }

    .audio-progress {
      width: min(520px, 58vw);
      height: 6px;
      border-radius: 999px;
      background: rgba(235, 235, 235, 0.24);
      overflow: hidden;
      pointer-events: none;
    }
    .audio-progress.disabled { opacity: 0.4; }
    .audio-progress-fill {
      width: 0%;
      height: 100%;
      background: #d5001c;
      transition: width 0.12s linear;
    }

    .ctrl-btn-next {
      font-family: 'Porsche Next TT', Arial, Helvetica, sans-serif;
      width: auto;
      padding: 0 16px;
      gap: 6px;
      background: #d5001c;
      border-radius: 4px;
    }
    .ctrl-btn-next:hover { background: #b0001a; }
    .ctrl-btn-next:disabled { background: #d5001c; opacity: 0.3; }
    .next-label {
      color: #fff;
      font-family: 'Porsche Next TT', Arial, Helvetica, sans-serif;
      font-size: 14px;
      font-weight: 700;
    }

    .nav-divider {
      width: 1px;
      height: 24px;
      background: rgba(255,255,255,0.2);
      margin: 0 8px;
    }

    /* --- Knowledge Check Modal --- */
    .kc-backdrop {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.7);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 100;
    }
    .kc-backdrop.hidden { display: none; }

    .kc-card {
      background: #2a2a2e;
      color: #fff;
      border-radius: 8px;
      width: 580px;
      max-width: 90vw;
      max-height: 80vh;
      overflow-y: auto;
      padding: 32px;
    }

    .kc-card h3 {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 8px;
      color: #ccc;
    }

    .kc-card .kc-question {
      font-size: 16px;
      line-height: 1.5;
      margin-bottom: 20px;
    }

    .kc-card .kc-choices {
      list-style: none;
    }

    .kc-card .kc-choices label {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 16px;
      margin-bottom: 8px;
      border-radius: 6px;
      border: 1px solid #555;
      cursor: pointer;
      font-size: 15px;
      transition: border-color 0.15s, background 0.15s;
    }
    .kc-card .kc-choices label:hover {
      border-color: #999;
      background: rgba(255,255,255,0.05);
    }
    .kc-card .kc-choices input[type="radio"] {
      accent-color: #d5001c;
      width: 18px;
      height: 18px;
      flex-shrink: 0;
    }

    .kc-actions {
      display: flex;
      gap: 12px;
      margin-top: 20px;
    }

    .kc-btn {
      padding: 10px 24px;
      border: none;
      border-radius: 4px;
      font-family: Porsche Next TT, Arial, Helvetica, sans-serif;
      font-size: 14px;
      font-weight: 700;
      cursor: pointer;
      transition: background 0.15s;
    }
    .kc-btn-submit {
      background: #d5001c;
      color: #fff;
    }
    .kc-btn-submit:hover { background: #b0001a; }
    .kc-btn-submit:disabled { opacity: 0.4; cursor: default; }
    .kc-btn-continue {
      background: #555;
      color: #fff;
    }
    .kc-btn-continue:hover { background: #666; }
    .kc-btn-continue.hidden { display: none; }

    .kc-feedback {
      margin-top: 16px;
      font-weight: 700;
      font-size: 15px;
      min-height: 22px;
    }
    .kc-feedback.correct { color: #4caf50; }
    .kc-feedback.incorrect { color: #ff5252; }

    /* --- Cue Editor --- */
    .cue-backdrop {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.72);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 110;
      padding: 20px;
    }
    .cue-backdrop.hidden { display: none; }
    .cue-card {
      width: min(1040px, 96vw);
      max-height: 88vh;
      overflow: auto;
      background: #26292f;
      border: 1px solid rgba(255,255,255,0.15);
      border-radius: 8px;
      color: #fff;
      padding: 18px;
      display: grid;
      gap: 14px;
    }
    .cue-head {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
    }
    .cue-head h3 {
      font-size: 18px;
      font-weight: 700;
    }
    .cue-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 8px 16px;
      font-size: 13px;
      color: #d4d8de;
    }
    .cue-grid {
      display: grid;
      grid-template-columns: repeat(6, minmax(0, 1fr));
      gap: 8px;
    }
    .cue-field {
      display: grid;
      gap: 4px;
      min-width: 0;
    }
    .cue-field label {
      font-size: 12px;
      color: #b6bdc8;
    }
    .cue-field input,
    .cue-field select,
    .cue-field textarea {
      width: 100%;
      background: #1e2126;
      border: 1px solid rgba(255,255,255,0.2);
      color: #fff;
      border-radius: 4px;
      padding: 8px 9px;
      font-size: 13px;
    }
    .cue-field textarea {
      min-height: 170px;
      font-family: Consolas, Menlo, Monaco, monospace;
      line-height: 1.35;
      resize: vertical;
    }
    .cue-actions {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
    .cue-btn {
      border: none;
      border-radius: 4px;
      padding: 8px 12px;
      font-size: 13px;
      font-weight: 700;
      cursor: pointer;
      color: #fff;
      background: #4a5059;
    }
    .cue-btn:hover { background: #5a616d; }
    .cue-btn-primary { background: #d5001c; }
    .cue-btn-primary:hover { background: #b0001a; }
    .cue-btn-danger { background: #6f2d36; }
    .cue-btn-danger:hover { background: #813642; }
    .cue-table-wrap {
      border: 1px solid rgba(255,255,255,0.16);
      border-radius: 6px;
      overflow: hidden;
    }
    .cue-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 13px;
    }
    .cue-table th,
    .cue-table td {
      padding: 7px 8px;
      border-bottom: 1px solid rgba(255,255,255,0.08);
      text-align: left;
      vertical-align: top;
    }
    .cue-table th {
      background: #20242a;
      color: #c8ced8;
      font-size: 12px;
      font-weight: 700;
    }
    .cue-table tr:last-child td { border-bottom: none; }
    .cue-table .cue-cell-action { white-space: nowrap; }
    .cue-inline-btn {
      border: none;
      border-radius: 4px;
      padding: 4px 7px;
      font-size: 12px;
      font-weight: 700;
      cursor: pointer;
      color: #fff;
      background: #5a606b;
    }
    .cue-inline-btn:hover { background: #6b7380; }
    .cue-status {
      min-height: 18px;
      font-size: 12px;
      color: #cdd3dc;
    }
    .cue-status.error { color: #ff8a8a; }
    .cue-status.ok { color: #9be0a3; }
    .cue-json-wrap {
      display: grid;
      gap: 8px;
    }
    @media (max-width: 980px) {
      .cue-grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }
  </style>
</head>
<body>

  <!-- Top bar -->
  <div class="top-bar">
    <div class="top-left">
      <button class="menu-btn" id="btn-menu">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m18 16v1h-12v-1zm0-5v1h-12v-1zm0-5v1h-12v-1z"/></svg>
        <span>Menu</span>
      </button>
    </div>
    <div class="top-right">
      <button class="top-icon-btn" id="btn-resources" title="Resources">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m13 2h-6c-1.1046 0-2 .8954-2 2v16c0 1.1046.8954 2 2 2h10c1.1046 0 2-.8954 2-2v-12zm0 1.414 4.586 4.586h-4.586zm-7 16.586v-16c0-.5523.4477-1 1-1h5v6h6v11c0 .5523-.4477 1-1 1h-10c-.5523 0-1-.4477-1-1z"/></svg>
      </button>
      <button class="top-text-btn dev-cues" id="btn-cues" title="Open cue editor">Cues</button>
    </div>
  </div>

  <!-- Menu Drawer -->
  <div class="menu-overlay" id="menu-overlay">
    <aside class="menu-panel" id="menu-panel" aria-label="Course table of contents">
      <div class="menu-panel-header">Course Contents</div>
      <ul class="toc-list" id="toc-list"></ul>
    </aside>
  </div>

  <!-- Slide area -->
  <div class="slide-area" id="slide-area">
    <div class="slide-scaler" id="slide-scaler">
      <iframe id="slide-frame" title="Slide content"></iframe>
    </div>
    <div class="cc-overlay hidden" id="cc-overlay"></div>
    <div class="click-to-begin-overlay hidden" id="audio-start-overlay">
      <span class="click-to-begin-label">Click the slide to begin</span>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="bottom-bar">
    <div class="bottom-logo">
      <!-- Porsche wordmark -->
      <svg viewBox="0 0 4500 300" xmlns="http://www.w3.org/2000/svg">
